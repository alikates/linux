&i2c_2 {
	status = "okay";
	speaker_codec: audio-codec@3a {
		compatible = "maxim,max98927";
		status = "okay";
		reg = <0x3a>;
		vmon-slot-no = <1>;
		imon-slot-no = <1>;
		interleave_mode = <0>;
		#sound-dai-cells = <0>;

		reset-gpios = <&tlmm 89 0>;
	};
};

&tlmm {
	gpio-reserved-ranges = <0 4>, <16 4>, <135 4>;
};

&usb3 {
	status = "okay";
};

